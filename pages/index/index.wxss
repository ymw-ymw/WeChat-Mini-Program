  width: 100%
}
.flor_list{
  /* margin-bottom: -80rpx */

}
.flor_list navigator{
  float: left;
  width: 33.33%;
  height: 100%;
}
.flor_list navigator image :nth-child(n+1){
  height: 100%
}
.flor_list navigator :nth-child(-n+3){
  border-bottom: 10rpx solid #fff;
  
}
.flor_list navigator :nth-child(-n + 4){
  width: 100%;
  height: 27vw;
  margin-left: 3rpx
}










