.index_swiper swiper{
  width: 750rpx;
  height: 340rpx
}
.index_swiper navigator{
  height: 100%
}
.index_swiper navigator image{
  width: 100%;
}

/*导航图  */
.index_cate{
  display: flex;
}
.index_cate navigator{
  flex: 1;
  width: 100%;
  height: 100%;
  padding: 10rpx
}
.index_cate navigator image{
  width: 100%
}


